<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/OneStudent">

    <ImageView
        android:id="@+id/studentProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_marginRight="3dp"/>


    <GridLayout
        android:id="@+id/studentgrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/studentProfile">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/studentNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)김포항"
            android:textSize="14dp"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/studentAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/studentAgeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)21"
            android:textSize="14dp"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/studentSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/studentSexData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)여성"
            android:textSize="14dp"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:id="@+id/studentSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="3">

            <TextView
                android:id="@+id/studentmajorSubjectData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ex)수학"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  :  "
                android:layout_toRightOf="@id/studentmajorSubjectData"/>

            <TextView
                android:id="@+id/studentminorSubjectData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ex)미분방정식"
                android:textSize="14dp"
                android:layout_toRightOf="@id/comma"/>
        </RelativeLayout>
    </GridLayout>


</RelativeLayout>