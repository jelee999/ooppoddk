<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.postech.jelee.poddk.FindUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원 정보 찾기"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint=" 이름"
                android:layout_gravity="center"
                android:padding="10dp"
                android:id="@+id/findID_name"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:lines="1"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint=" 이메일"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:id="@+id/findID_email"
                android:singleLine="true"
                android:lines="1"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"/>
            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hint="아이디 찾기"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/findIDButton"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint=" 이름"
                android:layout_gravity="center"
                android:padding="10dp"
                android:id="@+id/findPW_name"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:lines="1"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint=" 아이디"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:id="@+id/findPW_ID"
                    android:singleLine="true"
                    android:lines="1"
                    android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                    android:drawableLeft="@drawable/ic_perm_identity_black_24dp"/>

            <Spinner
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/findPW_question"></Spinner>
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="확인 질문 답변"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:singleLine="true"
                android:lines="1"
                android:id="@+id/findPW_answer"
                />
            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hint="비밀번호 찾기"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/findPWButton"/>


        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
