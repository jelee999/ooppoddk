<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/OneTeacher">

    <ImageView
        android:id="@+id/teacherProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_marginRight="3dp"/>


    <GridLayout
        android:id="@+id/teachergrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/teacherProfile">

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/teacherNameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)김포스"
            android:textSize="14dp"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/teacherAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/teacherAgeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)21"
            android:textSize="14dp"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/teacherSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/teacherSexData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)여성"
            android:textSize="14dp"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:id="@+id/teacherSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과목   "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_row="3"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/teacherSubjectData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ex)수학"
            android:textSize="14dp"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>


</RelativeLayout>