<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/WriteMailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="메일 제목"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"/>

    <ImageButton
        android:id="@+id/SendMailImgBtn"
        android:layout_alignTop="@id/WriteMailTitle"
        android:layout_alignBottom="@id/WriteMailTitle"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_send"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/WriteMailContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메일 내용"
        android:maxLines="10"
        android:lines="20"
        android:gravity="top"
        android:layout_below="@id/WriteMailTitle"
        android:background="@android:color/transparent"
        android:paddingLeft="15dp"/>
</RelativeLayout>
