<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.postech.jelee.poddk.Postechian_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="5dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="나이: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="성별: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="과목: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="소개: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/student_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="ex)포스테키안"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/student_age_data"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="ex)23"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/student_sex_data"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:text="ex)남"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/student_subject_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="ex)수학"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/student_introduction_data"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:layout_row="4"
                android:text="ex)잘 가르치겠습니다"
                android:textSize="16dp"/>
        </GridLayout>

    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="468dp"
        android:clickable="true"
        android:onClick="onaddTeacherClicked"
        app:srcCompat="@android:drawable/ic_input_add" />

</android.support.design.widget.CoordinatorLayout>

